@model BarraSuplementos.Models.Produto

@{
    ViewData["Title"] = "Produtos";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="display-4">Produtos</h1>
<h4 class="display-6">Excluir</h4>
<hr />

<h3 class="text-danger">Confirma a exclus√£o desse Produto?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lancamento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lancamento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QtdEstoque)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QtdEstoque)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ValorAtual)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ValorAtual)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ValorDesconto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ValorDesconto)
        </dd>

        <dt class="col-sm-12">
            <div class="col-md-4 col-sm-12 col-xxl-3">
                <div class="form-group">
                    <label asp-for="Imagem" class="form-label"></label>
                    <img id="PreviewImage" src="@Model.Imagem" class="img-fluid w-100">
                </div>
            </div>
        </dt>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Marca)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Marca.Nome)
        </dd>
    </dl>

    <form asp-action="Delete" class="col-12 mt-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger me-3"><i class="bi bi-trash-fill"></i> Excluir</button>
        <a asp-action="Index" class="btn btn-primary"><i class="bi bi-arrow-left-circle-fill"></i> Voltar a Listagem</a>
    </form>
</div>
