                <img src="~/img/logo.png" alt="" width="60" class="me-2">
                <h1 class="">Barra Suplementos</h1><!--Colocar o logo da Barra Suplementos aqui -->
            </a>
            <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav ms-auto p-4 p-lg-0">
                    <a asp-action="Index" class="nav-item nav-link active">Início</a>
                    <a href="#lancamentos" class="nav-item nav-link">Lançamentos</a>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Categorias</a>
                        <div class="dropdown-menu m-0">
                            <a asp-action="Produtos" class="dropdown-item">Proteína</a>

                        </div>
                    </div>
                    <a asp-action="FaleConosco" class="nav-item nav-link">Fale conosco</a>
                </div>
                <div class="d-none d-lg-flex ms-2">
                    <a class="btn-sm-square bg-white rounded-circle ms-3" href="">
                        <small class="fa fa-search text-body"></small>
                    </a>
                    <a class="btn-sm-square bg-white rounded-circle ms-3" href="">
                        <small class="fa fa-user text-body"></small>
                    </a>
                    <a class="btn-sm-square bg-white rounded-circle ms-3" href="">
                        <small class="fa fa-shopping-bag text-body"></small>
                    </a>
                </div>
            </div>
        </nav>
    </div>
