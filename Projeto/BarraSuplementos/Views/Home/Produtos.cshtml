@{
    ViewData["Title"] = "Produtos";
    Layout = "~/Views/Shared/_LayoutFront.cshtml";
    double tempo = 0.1;
}

<!-- Page Header Start -->
<div class="container-fluid mb-5 page-header wow fadeIn" data-wow-delay="0.1s" style="background-image: url(../img/FundoTeste2.jpg);">
    <div class="container">
        <h1 class="display-3 mb-3 animated slideInDown">Produtos</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a class="text-body" href="#">Início</a></li>
                <li class="breadcrumb-item text-dark active" aria-current="page">Produtos</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->


<!-- Product Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-0 gx-5 align-items-end">
            <div class="col-lg-6">
                <div class="section-header text-start mb-5 wow fadeInUp" data-wow-delay="0.1s"
                    style="max-width: 500px;">
                    <h1 class="display-5 mb-3">Nossos Produtos</h1>
                    <p>Conheça nossa variedade de produtos:
                    </p>
                </div>
            </div>
            <div class="col-lg-6 text-start text-lg-end wow slideInRight" data-wow-delay="0.1s">
               @foreach (var categoria in Model.Categorias)
               {
                <ul class="nav nav-pills d-inline-flex justify-content-end mb-5">
                    <li class="nav-item me-2">
                        <a class="btn btn-outline-primary border-2 active" data-bs-toggle="pill"
                            href="#tab-1">@categoria.Nome</a>
                    </li>
                </ul>
                }
            </div>
        </div>
     <!-- Product Start -->

            </div>
            <div class="tab-content">
                <div id="tab-1" class="tab-pane fade show p-0 active">
                    <div class="row g-4">
                        @foreach (var produto in Model.Produtos)
                        {
                            <div class="col-xl-3 col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="@(tempo.ToString().Replace(',', '.'))s">
                                <div class="product-item">
                                    <div class="position-relative bg-light overflow-hidden">
                                        <img class="img-fluid w-100" src="@produto.Imagem" alt="">
                                        <div
                                            class="bg-secondary rounded text-white position-absolute start-0 top-0 m-4 py-1 px-3">
                                            Novidade</div>
                                    </div>
                                    <div class="text-center p-4">
                                        <a class="d-block h5 mb-2" asp-action="Detalhe"
                                            asp-route-id="@produto.Id">@produto.Nome</a>
                                        <span class="text-primary me-1">R$ @produto.ValorAtual.ToString("N2")</span>
                                    </div>
                                    <div class="d-flex border-top">
                                        <small class="w-50 text-center border-end py-2">
                                            <a class="text-body" asp-action="Detalhe" asp-route-id="@produto.Id"><i
                                                    class="fa fa-eye text-primary me-2"></i>Detalhes</a>
                                        </small>
                                        <small class="w-50 text-center py-2">
                                            <a class="text-body" href=""><i
                                                    class="fa fa-shopping-bag text-primary me-2"></i>Adicionar ao
                                                carrinho</a>
                                        </small>
                                    </div>
                                </div>
                            </div>
                                 tempo += 0.2;
                            if (tempo == 0.9) tempo = 0.1;
                        }
                        <div class="col-12 text-center wow fadeInUp" data-wow-delay="0.1s">
                            <a class="btn btn-secondary rounded-pill py-3 px-5" asp-action="Produtos">Pesquise mais produtos</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Product End -->


    <!-- Firm Visit Start -->
    <div class="container-fluid bg-primary mt-5 py-6">
        <div class="container">
            <div class="row g-5 align-items-center">
                <div class="col-md-7 wow fadeIn" data-wow-delay="0.1s">
                    <h1 class="display-5 text-white mb-3">Compre presencialmente se preferir</h1>
                    <p class="text-white mb-0">Temos nossa loja há mais de três anos que atendemos com muito prazer
                        nossos clientes presencialmente. Venham conferir nosso atendimento.</p>
                </div>
                <div class="col-md-5 text-md-end wow fadeIn" data-wow-delay="0.5s">
                    <a class="btn btn-lg btn-dark rounded-pill py-3 px-5"
                        href="https://www.google.com/maps/dir//barra+suplementos+barra+bonita/data=!4m6!4m5!1m1!4e2!1m2!1m1!1s0x94c745ebd3d96041:0x75a496ef33b43ad0?sa=X&ved=2ahUKEwjRh_qSlt2BAxUgpZUCHUEwBOkQ9Rd6BAg5EAA&ved=2ahUKEwjRh_qSlt2BAxUgpZUCHUEwBOkQ9Rd6BAhLEAU">Visite
                        agora!</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Firm Visit End -->






